# AI-Powered Book Recommendation Service - Environment Configuration

# === Service Configuration ===
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development
LOG_LEVEL=INFO

# === Supabase Configuration ===
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# === Redis Configuration (Optional) ===
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# === Machine Learning Configuration ===
MODEL_NAME=paraphrase-multilingual-MiniLM-L12-v2
MODEL_CACHE_DIR=./models
EMBEDDING_DIMENSION=384
BATCH_SIZE=32
MAX_TEXT_LENGTH=512

# === Performance Configuration ===
WORKERS=1
MAX_CONCURRENT_REQUESTS=100
TIMEOUT_SECONDS=60
MEMORY_LIMIT_GB=2

# === Cache Configuration ===
CACHE_TTL_EMBEDDINGS=86400    # 24 hours
CACHE_TTL_RECOMMENDATIONS=1800 # 30 minutes
CACHE_TTL_USER_PROFILES=3600   # 1 hour
CACHE_MAX_SIZE=10000

# === Security Configuration ===
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.netlify.app
API_KEY_REQUIRED=false
API_KEY=your_optional_api_key_here

# === Monitoring Configuration ===
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=false

# === Development Configuration ===
DEBUG=true
RELOAD=true
ACCESS_LOG=true
CORS_ENABLED=true

# === Production Configuration ===
# ENVIRONMENT=production
# DEBUG=false
# RELOAD=false
# LOG_LEVEL=WARNING
# WORKERS=4