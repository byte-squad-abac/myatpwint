      "icons": [
        {
          "src": "/icons/shortcut-continue.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Browse Books",
      "short_name": "Browse",
      "description": "Explore our book collection",
      "url": "/books",
      "icons": [
        {
          "src": "/icons/shortcut-browse.svg",
          "sizes": "96x96", 
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "My Library",
      "short_name": "Library",
      "description": "View your purchased books",
      "url": "/my-library",
      "icons": [
        {
          "src": "/icons/shortcut-library.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
